
from decouple import config
from langchain_openai import OpenAI
from langchain.prompts import PromptTemplate

SECRET_KEY=config('OPENAI_API_KEY')

llm = OpenAI(openai_api_key=SECRET_KEY)

# prompt having one input variable

oneInputPrompt = PromptTemplate(input_variables=['language'],template='tell me a {language} trick')
# oneInputPromptAnother = PromptTemplate.from_template('tell me a {language} trick')

formatOnePrompt = oneInputPrompt.format(language='Java')

res = llm.invoke(formatOnePrompt)

print(res)